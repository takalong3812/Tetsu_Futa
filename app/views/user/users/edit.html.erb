<div class="container user-page">


  <h2>ユーザー情報変更</h2>

<%= form_with model: @user, url: user_user_path(current_user), local:true do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
  <div class="form-group row">
    <%= f.label :"ユーザー名" , class: "col-md-3" %>
    <%= f.text_field :name, placeholder: "", class: "col-md-2 form-control" %>
  </div>
   <div class="form-group row">
    <%= f.label :"自己紹介" , class: "col-md-3" %>
    <%= f.text_field :introduction, placeholder: "", class: "col-md-2 form-control" %>
  </div>
  <%= f.submit "変更を保存"%>
 <% end %>
 
 <%= link_to "退会する", user_unsubscribe_path, class: "btn btn-danger" %>

