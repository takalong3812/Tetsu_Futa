<div class="container user-page">
  <p class="text-center pt-2"><%= notice %></p>

   <h2>ユーザー情報<i class="fa-solid fa-face-smile"></i></h2>
       <% if @user.image.attached? %>
       <%= image_tag @user.image, size: "100x100" %>
       <% end %>
     <table class="table">
        <tbody>
         <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
         </tr>
         <tr>
          <th>プロフィール</th>
          <th><%= @user.introduction %></th>
         </tr>
        </tbody>
     </table>

      <div class="row">
         <%= link_to edit_admin_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

     <div class="col-md-8 offset-md-1">
   <h2>投稿一覧</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>感想</th>
      <th>住所</th>
      <th>コメント</th>
      <th>いいね</th>
      <th colspan="3"></th>
     </tr>
    </thead>
     <tbody>
      <% @posts.each do |post| %>
      <tr>
       <td>
        <% if @user.image.attached? %>
        <%= image_tag post.user.image, size: "50x50" %>
        <% end %>
       </td>
       <td><%= link_to post.title, admin_post_path(post.id)%></td>
       <td><%= post.impression %></td>
       <td><%= post.address %></td>
       <td><%=link_to "#{post.comments.count}コメント",admin_post_path(post.id) %></td>
       <td><%= post.liked_users.count %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>
</div>