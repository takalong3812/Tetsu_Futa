<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <h2>ユーザー一覧<i class="fa-solid fa-people-robbery"></i></h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>イメージ</th>
      <th>ユーザー名</th>
      <th>プロフィール</th>
      <th>退会ステータス</th>
      <th colspan="3"></th>
     </tr>
    </thead>
     <tbody>
      <% @users.each do |user| %>
      <tr>
       <td>
        <% if user.image.attached? %>
        <%= image_tag user.image, size: "100x100" %>
        <% end %>
       </td>
       <td><%= link_to user.name, admin_user_path(user.id)%></td>
       <td><%= user.introduction %></td>
       <td><%= user.is_deleted %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>
 </div>
</div>